<Window x:Class="SegundoRegistro.UI.Registro.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SegundoRegistro.UI.Registro"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu Height="18">
                <MenuItem Header="Registros">
                    <MenuItem x:Name="Rol" Header="Rol" Click="Registro_Click"></MenuItem>
                    <MenuItem x:Name="Usuario" Header="Usuario" Click="Usuario_Click" ></MenuItem>
                </MenuItem>

                <MenuItem Header="Consultas">
                    <MenuItem x:Name="Consulta" Header="Consulta" Click="Consulta_Click" />
                </MenuItem>


                <MenuItem Header="Aportes" >
                    <MenuItem x:Name="Aporte" Header="Aporte" />
                </MenuItem>

                <MenuItem Header="Ayuda">
                    <Menu/>
                </MenuItem>
            </Menu>
        </StackPanel>
    </Grid>
</Window>
